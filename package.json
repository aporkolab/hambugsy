{
  "name": "hambugsy",
  "version": "0.1.0",
  "description": "CLI tool for diagnosing test failures - determines if the test or the code is buggy",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "hambugsy": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "testing",
    "diagnostics",
    "debugging"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^9.5.2",
    "glob": "^11.0.0",
    "ora": "^8.1.1",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  }
}
