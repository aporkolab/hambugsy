{
  "name": "hambugsy",
  "version": "1.0.0",
  "description": "The CLI tool that tells you WHO is wrong: your test or your code. Uses GitHub Copilot CLI for AI-powered test failure diagnosis.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "hambugsy": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "testing",
    "test-failure",
    "diagnostics",
    "debugging",
    "github-copilot",
    "ai",
    "java",
    "junit",
    "jest",
    "vitest",
    "pytest",
    "go-test",
    "cargo-test",
    "nunit",
    "xunit",
    "mstest",
    "code-analysis",
    "developer-tools",
    "typescript",
    "python",
    "golang",
    "rust",
    "csharp"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "APorkolab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/APorkolab/hambugsy.git"
  },
  "homepage": "https://github.com/APorkolab/hambugsy#readme",
  "bugs": {
    "url": "https://github.com/APorkolab/hambugsy/issues"
  },
  "dependencies": {
    "@types/figlet": "^1.7.0",
    "chalk": "^5.3.0",
    "chokidar": "^5.0.0",
    "commander": "^12.1.0",
    "execa": "^9.5.2",
    "figlet": "^1.10.0",
    "glob": "^11.0.0",
    "ora": "^8.1.1",
    "p-queue": "^9.1.0",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  }
}
