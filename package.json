{
  "name": "hambugsy",
  "version": "1.0.0",
  "description": "ðŸ” The CLI that tells you WHO is wrong: your test or your code",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "hambugsy": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "build:watch": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm test && npm run build"
  },
  "keywords": [
    "cli",
    "testing",
    "debugging",
    "developer-tools",
    "test-analysis",
    "github-copilot",
    "copilot-cli",
    "junit",
    "jest",
    "pytest",
    "test-debugging",
    "code-analysis",
    "verdict"
  ],
  "author": {
    "name": "ÃdÃ¡m PorkolÃ¡b",
    "email": "adam.porkolab@gmail.com",
    "url": "https://adamporkolab.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamporkolab/hambugsy.git"
  },
  "bugs": {
    "url": "https://github.com/adamporkolab/hambugsy/issues"
  },
  "homepage": "https://hambugsy.dev",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "execa": "^8.0.1",
    "ora": "^8.0.1",
    "p-queue": "^8.0.1",
    "tree-sitter": "^0.21.0",
    "tree-sitter-java": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "yaml": "^2.3.4",
    "glob": "^10.3.10",
    "level": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "vitest": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "prettier": "^3.2.4"
  },
  "peerDependencies": {
    "gh": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "gh": {
      "optional": false
    }
  }
}
